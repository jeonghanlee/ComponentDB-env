

JAVA_HOME:=/usr/lib/jvm/java-11-openjdk-amd64
ANT_HOME:=/usr/share/ant

PAYARA_INSTALL_PATH:=/opt/payara


## MariaDB configuration example
## Users in the HOSTS can access the SQL server with DB_ADMIN permission
DB_ADMIN_HOSTS="localhost 127.0.0.1 131.243.84.71"
## SQL Server 
DB_HOST_IPADDR=131.243.84.71
DB_HOST_PORT=3306
DB_HOST_NAME=alsudev.als.lbl.gov
## SQL server ADMIN user, because we don't use root
DB_ADMIN=admin
DB_ADMIN_PASS=admin
## User for the Database DB_NAME
DB_NAME=cdb
DB_USER=cdbpayara
DB_USER_PASS=cdbpayara
## ComponentDB Admin Local User
CDB_USER=cdbuser
CDB_USER_PASS=cdbuser



# These allow developers to override the variable
-include $(TOP)/../CONFIG_COMMON.local
-include $(TOP)/configure/CONFIG_COMMON.local

